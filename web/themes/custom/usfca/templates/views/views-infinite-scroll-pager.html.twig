{#
/**
 * @file
 * The views infinite scroll pager template.
 */
#}

{% if items.next %}

  <div class="cc--component-container cc--pager-load-more ">
    <div class="c--component c--pager-load-more">
      <ul{{ attributes }}>
        <li class="pager__item f--field f--link">
          <a class="link" href="{{ items.next.href }}" title="{{ 'Go to next page'|t }}" rel="next">{{ options.button_text }}</a>
        </li>
      </ul>
    </div>
  </div>

{% endif %}
