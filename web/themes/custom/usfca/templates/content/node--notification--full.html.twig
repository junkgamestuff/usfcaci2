{% extends "node.html.twig" %}

{% block content %}

  <div class="content-top">
    <div class="lc--layout-container lc--full">
      <div class="l--layout l--full">
        <div class="lr--layout-region lr--main">

          {% include "components-title-no-imag" with { title: fields.title } only %}

        </div>
      </div>
    </div>
  </div>

  <div class="content-main">
    <div class="lc--layout-container lc--full">
      <div class="l--layout l--full">
        <div class="lr--layout-region lr--main">
          {% include 'components-spacer' %}

          {% if fields.description is not empty %}
          {% include "components-rich-text" with { markup: fields.description } only %}
          {% endif %}

          {{content.field_components}}

          {% include 'components-spacer' %}
          {% include 'components-spacer' %}
        </div>
      </div>
    </div>
  </div>

{% endblock content %}
