{% extends "base-component" %}

{% set name = "request-for-information" %}
{% set container_element = 'section' %}
{% set container_aria_label = "Request For Information" %}

{% block content %}

  <div class="inner-wrapper">
    <div class="header-container">
      {% include "fields-section-title" with {
        title: title
      } only %}

      {% if description %}
        {% include "fields-description" with {
          description: description
        } only %}
      {% endif %}
    </div>

    {% if formEmbed is not empty %}
      <div class="form-embed-wrapper">
        {{ formEmbed|raw }}
      </div>
    {% endif %}

    {% if variant != 'expanded' %}
      <div class="btn-show f--button">
        {% include "base-button" with {
          cta: button.text,
          ariaLabel: button.ariaLabel,
          href: '#',
          isAlt: false,
          hasIcon: false
        } %}
      </div>

      <div class="btn-hide f--button">
        {% include "base-button" with {
          cta: 'Close',
          ariaLabel: 'Close button',
          href: '#',
          isAlt: true,
          hasIcon: true,
          svg: '<svg width="14px" height="14px" viewBox="0 0 14 14" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"><g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd"><g transform="translate(-616.000000, -2455.000000)" fill="#505151"><g transform="translate(125.000000, 1574.000000)"><g transform="translate(225.000000, 102.000000)"><g transform="translate(48.000000, 638.000000)"><g transform="translate(167.000000, 135.000000)"><g transform="translate(45.000000, 0.000000)"><path d="M18.1942562,6.49203974 L19.2044088,7.50219228 L13.8580397,12.8480397 L19.2044088,18.1942562 L18.1942562,19.2044088 L12.8480397,13.8580397 L7.50219228,19.2044088 L6.49203974,18.1942562 L11.8380397,12.8480397 L6.49203974,7.50219228 L7.50219228,6.49203974 L12.8480397,11.8380397 L18.1942562,6.49203974 Z"></path></g></g></g></g></g></g></g></svg>'
        } %}
      </div>
    {% endif %}

  </div>
{% endblock %}

