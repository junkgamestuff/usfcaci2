{% extends "base-component" %}

{% set name = "program-faculty-listing" %}

{% block content %}

  {% include "fields-cta-title" with { title: title } only %}

  {% embed "base-field" with { name: "field-components" } %}

    {% block content %}

      {% for card in cards %}

        {% include "components-program-faculty-listing-item" with {
          image: card.image,
          title: card.title,
          position: card.position,
          category: card.category,
          school: card.school,
          email: card.email,
          location: card.location,
          description: card.description,
          education: card.education,
          link: card.link,
        } only %}

      {% endfor %}

    {% endblock content %}

  {% endembed %}

{% endblock %}
