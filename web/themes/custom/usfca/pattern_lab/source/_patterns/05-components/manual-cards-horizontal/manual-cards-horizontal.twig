{% extends "base-component" %}

{% set name = "manual-cards-horizontal" %}

{% block content %}
  <div class="inner-wrapper">

    {% if title is not empty %}

      {% include "fields-section-title" with { title: title } only %}

    {% endif %}

    {% embed "base-field" with { name: "field-components" } %}

      {% block content %}

        {% for card in cards %}

          {% include "components-manual-card-horizontal" with {
            title: card.title,
            link: card.link,
            description: card.description,
            image: card.image
          } only %}

        {% endfor %}

      {% endblock content %}

    {% endembed %}

  </div>
{% endblock %}
