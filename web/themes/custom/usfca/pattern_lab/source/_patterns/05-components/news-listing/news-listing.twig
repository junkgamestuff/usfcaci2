{% extends "base-component" %}

{% set name = "news-listing" %}

{% block content %}

  {% embed "base-field" with { name: "field-components" } %}

    {% block content %}

      {% for card in cards %}

        {% include "components-news-listing-item" with {
          eyebrow: card.eyebrow,
          title: card.title,
          description: card.description,
          link: card.link,
          ext_link: card.ext_link,
          date: card.date,
          image: card.image
        } only %}

      {% endfor %}

      {% if link is not empty %}
        {% include "fields-link" with {
          href: link.href,
          cta: link.cta,
          aria: link.ariaLabel
        } only %}
      {% endif %}

    {% endblock content %}

  {% endembed %}

{% endblock %}
