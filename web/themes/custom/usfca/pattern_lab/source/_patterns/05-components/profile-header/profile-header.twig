{% extends "base-component" %}

{% set name = "profile-header" %}

{% block content %}

  <div class="top-wrapper">
    {% if image is not empty and image.src %}
      {% include "fields-image" with {
        image: image
      } only %}
    {% else %}
      <div class="f--image"><span class="visually-hidden">{{ 'Profile Image' }}</span></div>
    {% endif %}

    <div class="profile-main">
      <div class="profile-main-wrapper">
        {% include "fields-page-title" with {
          title: title
        } only %}
        {% if suffix is not empty %}
          {% include "fields-page-title" with {
            title: suffix
          } only %}
        {% endif %}
        {% include "fields-sub-title" with {
          title: position
        } only %}
      </div>
    </div>
  </div>

  <div class="bottom-wrapper">
    <div class="office-wrapper">
      {% if office is not empty %}
        {% for role in office %}
          {% include "fields-label" with {
            span: role.title
          } only %}

          {% if role.places is not empty %}
            <ul class="places-list">
              {% for place in role.places %}
                <li>{{ place.name }}</li>
              {% endfor %}
            </ul>
          {% endif %}
        {% endfor %}
      {% endif %}
    </div>

    <div class="contacts-wrapper">
      {% if contacts.email %}
        {% include "fields-email" with {
          email: contacts.email
        } only %}
      {% endif %}

      {% if contacts.location %}
        {% include "fields-address" with {
          address: contacts.location
        } only %}
      {% endif %}

      {% if contacts.phone %}
        {% include "fields-phone" with {
          phone: contacts.phone
        } only %}
      {% endif %}

      {% if contacts.file is not empty and contacts.file.url and contacts.file.title %}
        <div class="file-field-wrapper">
          {% include "fields-link" with {
            link: contacts.file
          } only %}
        </div>
      {% endif %}

      {% if contacts.links is not empty %}
        <ul class="contact-links">
          {% for link in contacts.links %}
            {% if link.url and link.title %}
              <li>
                {% include "fields-link" with { link: link } only %}
              </li>
            {% endif %}
          {% endfor %}
        </ul>
      {% endif %}
    </div>

    {% if social is not empty %}
      <div class="socials-container">
        <ul class="social-links">
          {% for link in social %}
