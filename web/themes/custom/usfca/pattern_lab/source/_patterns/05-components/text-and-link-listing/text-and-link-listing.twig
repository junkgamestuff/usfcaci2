{% extends "base-component" %}

{% set name="text-and-link-listing" %}

{% block content %}

  <svg class="arrow" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" x="0px"
    y="0px" viewBox="0 0 50 50" enable-background="new 0 0 50 50" xml:space="preserve">
  <path fill="#FDBB30" fill-rule="evenodd" clip-rule="evenodd" d="M32.5,32.6L3.4,33c0,0-3,0.3-3.1,3.8c-0.1,3.5,3,3.8,3,3.8L40,40.2l0,0
    l0,0l0.4-36.8c0,0-0.2-3-3.7-3c-3.5,0.1-3.8,3.1-3.8,3.1L32.5,32.6z"/>
  </svg>

  <div class="inner-container">

    <div class="text-container">
      {% if title is not empty %}
        {% include "fields-section-title" with {
          title: title
        } only %}
      {% endif %}

      {% if description is not empty %}
        {% include "fields-description" with { description: description } only %}
      {% endif %}
    </div>

    {% if links is not empty %}
      <div class="links-container">
        {% set columnsNumber = 1 %}
        {% set linksInColumn = (links | length / columnsNumber)|round(0, 'ceil') %}
        {% set j = 0 %}

        {% for i in 0..columnsNumber-1 %}
          <div class="column">
            {% for link in links[j: linksInColumn] %}

              {% include "fields-link" with {
                url: link.url,
                title: link.title,
                ariaLabel: link.ariaLabel,
                hasIcon: link.hasIcon,
                svg: link.svg
              } only %}

              {% set j = j + 1 %}
            {% endfor %}
          </div>
        {% endfor %}

      </div>
    {% endif %}

  </div>

{% endblock %}

