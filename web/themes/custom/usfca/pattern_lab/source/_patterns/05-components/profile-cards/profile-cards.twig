{% extends "base-component" %}

{% set name = "profile-cards" %}

{% block content %}

  {% include "fields-section-title" with { title: title } %}

  {% embed "base-field" with { name: "field-components" } %}

    {% block content %}

      {% for card in cards %}

        {% include "components-profile-card" with {
          profile_link: card.profile_link,
          title: card.title,
          subText: card.subText,
          image: card.image
        } only %}

      {% endfor %}

    {% endblock content %}

  {% endembed %}

  {% include "fields-link" with {
    href: link.href,
    cta: link.cta,
    ariaLabel: link.ariaLabel
  } only %}

{% endblock %}
