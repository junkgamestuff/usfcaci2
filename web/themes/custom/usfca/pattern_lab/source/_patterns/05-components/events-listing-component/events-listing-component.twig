{% extends "base-component" %}

{% set name = "events-listing-component" %}
{% set container_element = 'section' %}
{% set container_aria_label = "Body text" %}

{% block content %}

  {% if image.src is not empty %}
    <div class="image-container">
      <a href="{{ link.href }}">
        {% include "fields-image" with {
          image: image
        } only %}
      </a>
    </div>
  {% endif %}

  <div class="text-container">
    {% if date is not empty %}
      {% include "fields-date-string" with {
        text: date
      } only %}
    {% endif %}

    {% if title is not empty %}
      {% include "fields-cta-title" with {
        href: link.href,
        title: title
      } only %}
    {% endif %}

    {% if description is not empty %}
      {% include "fields-description" with {
        description: description
      } %}
    {% endif %}

    {% if time is not empty %}
      {% include "fields-time-string" with {
        text: time
      } only %}
    {% endif %}

    {% if location is not empty %}
      {% include "fields-text" with {
        text: location,
        field_variant: 'event-location'
      } only %}
    {% endif %}

  </div>

{% endblock %}

