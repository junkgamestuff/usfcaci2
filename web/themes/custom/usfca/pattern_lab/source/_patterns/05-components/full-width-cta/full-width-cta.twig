{% extends "base-component" %}

{% set name = "full-width-cta" %}
{% set container_element = 'section' %}
{% set container_aria_label = "Full Width CTA" %}


{% block content %}

  {% if (title is not empty) or (description is not empty) %}
    <div class="header-container">

      {% if title %}
        {% include "fields-section-title" with {
          title: title
        } only %}
      {% endif %}
      {% if description %}
        {% include "fields-description" with {
          description: description
        } only %}
      {% endif %}
    </div>
  {% endif %}

  {% if links %}
    <div class="links-container">
      {% for link in links %}

        {% include "fields-link" with {
          href: link.href,
          cta: link.cta,
          ariaLabel: link.ariaLabel,
          field_variant: link.color,
          svg: '<svg version=\"1.1\" xmlns=\"http://www.w3.org/2000/svg\" xmlns:xlink=\"http://www.w3.org/1999/xlink\" x=\"0px\" y=\"0px\" viewBox=\"0 0 50 50\" enable-background=\"new 0 0 50 50\" xml:space=\"preserve\"><path fill=\"#FDBB30\" fill-rule=\"evenodd\" clip-rule=\"evenodd\" d=\"M32.5,32.6L3.4,33c0,0-3,0.3-3.1,3.8c-0.1,3.5,3,3.8,3,3.8L40,40.2l0,0l0,0l0.4-36.8c0,0-0.2-3-3.7-3c-3.5,0.1-3.8,3.1-3.8,3.1L32.5,32.6z\"/></svg>'
        } only %}
      {% endfor %}
    </div>
  {% endif %}

{% endblock %}

