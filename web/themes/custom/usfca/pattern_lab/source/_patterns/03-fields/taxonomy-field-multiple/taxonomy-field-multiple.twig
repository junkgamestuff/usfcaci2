{% extends "base-field" %}

{% set name="taxonomy-field-multiple" %}

{% block content %}
  {% if title is not empty %}
    <h3>{{ title }}</h3>
  {% endif %}
  
  <ul>
    {% for term in terms %}
      <li>
        {% if term.href is not empty %}
          <a href="{{ term.href }}">{{ term.text }}</a>
        {% else %}
          {{ term.text }}
        {% endif %}
      </li>
    {% endfor %}
  </ul>


{% endblock %}
